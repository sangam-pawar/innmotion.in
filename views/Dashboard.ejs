<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>

  




<body class="" style="background-color: blueviolet; font-family:  'Playfair Display', serif;;">




    <%- include('./partials/navbar.ejs') %>



  

      <div class="container d-flex text-center  " style="align-items: center; justify-content:center "> 
        <div class="p-4 border bg-light  mt-5" style="max-width: 55rem;  width:100% ; border-radius:1rem" >
        <p class=" text-dark fw-bold" style="text-align: center; font-size: 1.5rem ; "> Details</p>
         

        <form>
          <div class="detail ;border radius : 2rem">
          <div class="mb-3">
            <input placeholder="Name" type="text" class="form-control" id="exampleInputEmail1"
              aria-describedby="emailHelp">

          </div>
          <div class="mb-3 mt-2">
            <input placeholder="Contact" type="tel" class="form-control" id="exampleInputPassword1">
          </div>
         
        </div>
          <div class="Order-Detail hide mb-4">
            <div class="mt-2">
              <h2 class="mb2 ; margin top : 2">ITEM DETAIL </h2> 

              <style>
                .hide{
                  display: none;
                }
                .selected{
                color: blueviolet;
                }

              </style>
              <div class="mb-3">

              <a class="btn single-item  mx-2" onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
                <i class="fa-solid fa-box" style="font-size: 4rem;"></i>
                <p class="m-0">Single Item</p>
              </a>

              <a class="btn single-item  mx-2" onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
                <i class="fa-solid fa-boxes-stacked " style="font-size: 4rem;"></i>
                 <p class="m-0">More Than 1</p>
              </a>

              <a class="btn single-item mx-2 " onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
                <i class="fa-solid fa-bed" style="font-size: 4rem;"></i>
                 <p class="m-0">Single Room</p>
              </a>
              </div>

            
              <div >           
              <a class="btn single-item mx-3" onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
                <i class="fa-solid fa-house" style="font-size: 4rem;"></i>
                 <p class="m-0">1 BHK</p>
              </a>

              <a class="btn single-item px-4" onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
                <i class="fa-solid fa-building" style="font-size: 4rem;"></i>
                  <p class="m-0">2 BHK</p>
              </a>

              <a class="btn single-item mx-3 " onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
                <i class="fa-solid fa-city" style="font-size: 4rem;"></i>
                  <p class="m-0">> 2 BHK</p>
              </a>
            </div>
             <h2 class="mb2 ;line height :0.4">ITEM TYPE</h2>
             <label for="Fragile" class="form-label">Number of Fragile Item</label>
             <input  type="number" class="form-control" id="Fragile"
              aria-describedby="emailHelp">

          </div>
          <div class="mb-3 mt-2">
            <label for="Big" class="form-label">Number of Big Item</label>
            <input  type="number" class="form-control" id="Big">

             <h2 class="mb2 , border radius : 2rem">RECOMMENDED VEHICLE</h2>

             <a class="btn single-item  mx-2" onclick="select('Truck')" style="border-radius: 1rem; border: 2px blueviolet solid;">
              <i class="fa-solid fa-truck" style="font-size: 4rem;"></i>
                 <p class="m-0">Truck</p>
            </a>

            <a class="btn single-item  mx-2" onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
              <i class="fa-solid fa-truck-pickup" style="font-size: 4rem;"></i>
                <p class="m-0">Tempo</p>
            </a>

            <a class="btn single-item  mx-2" onclick="select('single-item')" style="border-radius: 1rem; border: 2px blueviolet solid;">
              <i class="fa-solid fa-caravan"style="font-size: 4rem;"></i>
              <p class="m-0">Auto</p>
            </a>
            
              

             <h2 class="mb2">TOTAL COST</h2>
            
              <input type="checkbox " class="btn-check " id="Personalized" autocomplete="off">
             <label class="btn btn-warning mx-2" for="Personalized">Personalized</label>

             <input type="checkbox" class="btn-check" id="Sharing" autocomplete="off">
             <label class="btn btn-warning mx-2" for="Sharing"">Sharing</label>

             
          
          

              


             




            </div>
            
          </div>
          <div class="text-center">
            <button type="button" class="btn btn-primary  px-5 fw-bold " onclick="change()"  style="border-radius: 5rem;"> Next</button>
          </div>
        </form>
      </div>
      </div>
  </body>


<script>
  function change(){
    document.querySelector('.Order-Detail').classList.remove('hide')
    document.querySelector('.detail').classList.add('hide')


    

  }
</script>

<script>

  function select(i) {
    console.log(i);
    document.querySelector('.'+i).classList.add('selected')

  }

</script>




</html>